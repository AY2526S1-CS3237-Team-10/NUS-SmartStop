# ===================================================================
# NUS-SmartStop Configuration
# This configuration works WITHOUT Docker
# All services run natively on Ubuntu 24.04 using systemd
# ===================================================================

# InfluxDB Configuration (Local - same server)
# Note: Update the token in telegraf.conf directly
INFLUXDB_URL=http://127.0.0.1:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=NUS SmartStop
INFLUXDB_BUCKET=sensor_data

# MQTT Configuration (Mosquitto via systemd)
MQTT_BROKER=127.0.0.1
MQTT_PORT=1883
MQTT_TOPIC_PREFIX=nus-smartstop

# Flask Server Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=False
UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=16777216

# Flask API Authentication
API_KEY=YOUR_SECURE_API_KEY

# ML Model Configuration
MODEL_PATH=./ml_models/
CONFIDENCE_THRESHOLD=0.5
